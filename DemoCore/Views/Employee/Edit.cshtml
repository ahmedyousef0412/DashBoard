@model DemoCore.BLL.Models.ViewModels.EmployeeVM
@{
    ViewData["Title"] = "Employee Edit";

}

<h2>Edit Employee </h2>





<div asp-validation-summary="All" class="text-danger"></div> @*Using Validation*@

@*

    I Use [asp-action="Create" asp-controller="DepartmentController1"] because When I Click
    On Button Reset or Submit  need to go to Controller/Action To See If This Data are [true]
    or Not


*@

<form  asp-controller="Employee" asp-action="Edit"   class="form-group">



    @*<label>Department Id</label>*@
    <input type="hidden" asp-for="Id" class="form-control" disabled="disabled" />

    <br />
    <label> Employee Name </label>



    @*
        Using asp-for to told the Input this Data Belong to who
           Instead Of [Name]
    *@
    <input type="text" asp-for="EmployeeName" class="form-control" disabled="disabled" />

    <br />


    <label> Salary </label>
    <input type="text" asp-for="Salary" class="form-control" disabled="disabled" />


    <br />

    <br />


    <label> Email </label>
    <input type="text" asp-for="Email" class="form-control" disabled="disabled" />


    <br />

    <br />


    <label> Address </label>
    <input type="text" asp-for="Address" class="form-control" disabled="disabled" />


    <br />

    <br />


    <label> IsActive </label>
    <input type="text" asp-for="IsActive" class="form-control" disabled="disabled" />


    <br />

    <br />


    <label> Notes </label>
    <input type="text" asp-for="Notes" class="form-control" disabled="disabled" />


    <br />

    <br />


    <label> Hire Date </label>
    <input type="text" asp-for="HireDate" class="form-control" disabled="disabled" />


    <br />

    <br />


    <label> Department Name </label>
    <input type="text" asp-for="DepartmentId" class="form-control" disabled="disabled" />


    <br />


    <center>

        <input type="submit" value="Edit" class="btn btn-primary" />
        @*<input type="reset" value="Cancle" class="btn btn-danger" />*@
        <a asp-controller="Employee" asp-action="Index" class="btn btn-success"> Back To Employee </a>

    </center>


</form>

@section MicrosoftValidation {
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



